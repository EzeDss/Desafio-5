<div class="container mt-3">
    <div class="jumbotron">
      <h1 style="color: blue">AÃ±adir producto</h1>
      <br />
  
      <form action="/productos" method="post">
        <div class="form-group">
          <label for="producto"><b>Producto</b></label>
          <input id="producto" class="form-control" type="text" name="producto" />
        </div>
  
        <div class="form-group">
          <label for="precio"><b>Precio</b></label>
          <input id="precio" class="form-control" type="number" name="precio" />
        </div>
  
        <div class="form-group">
          <label for="thumbnail"><b>Thumbnail</b></label>
          <input
            id="thumbnail"
            class="form-control"
            type="text"
            name="thumbnail"
          />
        </div>
  
        <button class="btn btn-success mt-3 mb-5">Subir</button>
      </form>
  
      <h2 style="color: crimson">Productos</h2>
  
      <% if (productos.length != 0) { %>
      <div class="table-responsive">
        <table class="table table-dark">
          <tr style="color: yellow">
            <th>Producto</th>
            <th>Precio</th>
            <th>Thumbnail</th>
          </tr>
          <% productos.forEach( producto => { %>
              <tr>
                <td>
                  <%=producto.producto %>
                </td>
                <td>
                  <%=producto.precio %>
                </td>
                <td>
                  <img
                    style="width: 60px"
                    src=<%=producto.thumbnail %>
                    alt=<%=producto.producto %>
                  />
                </td>
              </tr>        
          <% }) %>
        </table>
      </div>
      <% } else { %>
      <h3 class="alert alert-danger">No hay productos</h3>
      <% } %>
    </div>
  </div>