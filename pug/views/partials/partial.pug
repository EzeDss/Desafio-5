div(class='container.mt-3')
    div(class='jumbotron')     
        h1(style="color:blue;") AÃ±adir producto
        br
        form(action="/productos", method="post")
            div(class="form-group")
            label(for="producto")
                b Producto 
            input#producto.form-control(type="text", name="producto")
            div(class="form-group")
            label(for="precio")
                b Precio
            input#precio.form-control(type="number", name="precio")
            div(class="form-group")
            label(for="thumbnail")
                b Thumbnail
            input#thumbnail.form-control(type="text", name="thumbnail")
            button.btn.btn-success.mt-3.mb-5 Subir
        h2(style="color:crimson;") Productos
        if productos.length != 0
            div(class="table-responsive")
                table.table.table-dark
                    tr(style="color: yellow;")
                        th Producto
                        th Precio
                        th Thumbnail
                    each val in productos
                        tr
                            td= val.producto
                            td= val.precio
                            td
                                img(style="width: 60px", src=val.thumbnail, alt=val.producto)
        else
            h3(class="alert alert-danger") No hay productos
